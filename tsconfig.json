{
  "compilerOptions": {
    "baseUrl": "src",
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": true,
    "pretty": true,
    "rootDir": "src",
    "strict": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "outDir": "lib",
    "lib": ["dom", "es2018"]
  },
  "files": ["src/index.ts"],
  "exclude": ["node_modules", "lib", "esm"]
}
